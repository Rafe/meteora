!!! xml
feed(xmlns="http://www.w3.org/2005/Atom")
  title=site.title
  link(href="#{ site.url }/atom.xml",rel="self")
  link(href="#{ site.url }/")
  updated= site.updated
  id= site.url
  author
    name= site.author
    email= site.email
  for post in posts
    entry
      title(type="html") #{ post.title }
      link href="#{ site.url }#{ post.link }"/>
      updated= post.xmldate
      id= site.url + ' ' + post.title
      content(type="html")
        :cdata
          #{post.render()}
